<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.twc</groupId>
  <artifactId>terminator-compiler</artifactId>
  <version>1.0</version>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <gen.sources.skip>false</gen.sources.skip> <!-- default -->
  </properties>
  <build>
    <plugins>
      <!-- Generate sources -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.3.2</version>
        <executions>
          <!-- hejava -->
          <execution>
            <id>generate-hejava-visitors</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <skip>${gen.sources.skip}</skip>
              <executable>java</executable>
              <workingDirectory>src/main/java/org/twc/terminator/hejava2spiglet</workingDirectory>
              <arguments>
                <argument>-jar</argument>
                <argument>${basedir}/lib/jtb132di.jar</argument>
                <argument>-te</argument>
                <argument>./hejavaparser/HEJava.jj</argument>
                <argument>-np</argument>
                <argument>org.twc.terminator.hejava2spiglet.hejavasyntaxtree</argument>
                <argument>-vp</argument>
                <argument>org.twc.terminator.hejava2spiglet.hejavavisitor</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>generate-hejava-parser</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <skip>${gen.sources.skip}</skip>
              <executable>javacc</executable>
              <workingDirectory>src/main/java/org/twc/terminator/hejava2spiglet/hejavaparser</workingDirectory>
              <arguments>
                <argument>HEJava-jtb.jj</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Copy dependency jars to target -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/lib</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>lib/</classpathPrefix>
              <mainClass>org.twc.terminator.Main</mainClass>
            </manifest>
            <manifestEntries>
              <Built-By>Dimitris Mouris</Built-By>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <!-- Remove autogenerated visitors and parsers -->
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <filesets>
            <!-- hejava -->
            <fileset>
              <directory>${basedir}/src/main/java/org/twc/terminator/hejava2spiglet/hejavasyntaxtree</directory>
              <includes>
                <include>**</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
            <fileset>
              <directory>${basedir}/src/main/java/org/twc/terminator/hejava2spiglet/hejavavisitor</directory>
              <includes>
                <include>**</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
            <fileset>
              <directory>${basedir}/src/main/java/org/twc/terminator/hejava2spiglet/hejavaparser</directory>
              <includes>
                <include>**/*.java</include>
              </includes>
              <excludes>
                <exclude>**/HEJava.jj</exclude>
              </excludes>
              <followSymlinks>false</followSymlinks>
            </fileset>
            <fileset>
              <directory>${basedir}/src/test/resources</directory>
              <includes>
                <include>**/*.spg</include>
                <include>**/*.kg</include>
                <include>**/*.asm</include>
              </includes>
              <excludes>
                <exclude>**/*.java</exclude>
                <exclude>**/*.pubtape</exclude>
                <exclude>**/*.auxtape</exclude>
              </excludes>
              <followSymlinks>false</followSymlinks>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
